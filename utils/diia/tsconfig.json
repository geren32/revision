{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"]
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "transpileOnly": false,
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}